{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "rootDir": "./",
    "types": [
      "vinxi/types/client"
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "tailwind.config.ts",
    "theme",
    "src"
  ]
}
